<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="180" android:endColor="#ff6a6bcc" android:startColor="#ff6060cc"/>

            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="180" android:endColor="#ff7378cc" android:startColor="#ff606bcc"/>

            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_checkable="true">
        <shape>
            <gradient android:angle="180" android:endColor="#ff7278cc" android:startColor="#ff727acc"/>

            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="180" android:endColor="#00000000" android:startColor="#00000000"/>

            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>