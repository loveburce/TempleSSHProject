<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:padding="8dip"
		android:background="#ffffff"
		android:descendantFocusability="blocksDescendants">
	
	<ImageView 
			android:id="@+id/fragment_event_item_user_avatar"
			android:layout_width="40dp" 
			android:layout_height="40dp"
			android:scaleType="centerInside"
			android:src="@drawable/head"/>
	
	<TextView
			android:id="@+id/fragment_event_item_user_name"
			style="@style/TextTheme"
			android:layout_toRightOf="@id/fragment_event_item_user_avatar"
			android:layout_alignTop="@id/fragment_event_item_user_avatar"
			android:layout_alignBottom="@id/fragment_event_item_user_avatar"
			android:layout_marginLeft="8dip"
			android:text="年月"
			android:gravity="center_vertical"/>

	<ImageView
			android:id="@+id/fragment_event_item_user_fav"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@id/fragment_event_item_user_avatar"
			android:layout_alignBottom="@id/fragment_event_item_user_avatar"
			android:scaleType="centerInside"
			android:src="@drawable/ic_action_fav_normal"/>

	<TextView
			android:id="@+id/fragment_event_item_user_content_text"
			style="@style/TextTheme"
			android:text="hello 大家早上好啊！"
			android:layout_below="@id/fragment_event_item_user_avatar"
			android:layout_margin="4dp"/>

	<ImageView
			android:id="@+id/fragment_event_item_user_content_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:layout_below="@id/fragment_event_item_user_content_text"
			android:layout_centerHorizontal="true"
			android:layout_marginRight="4dip"
			android:layout_marginLeft="4dip"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:visibility="visible"
			android:src="@drawable/loading_animation"/>

	<TextView
			android:id="@+id/fragment_event_item_user_comment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/fragment_event_item_user_content_image"
			android:drawableLeft="@drawable/ic_action_comment"
			android:gravity="center"
			android:text="评论"
			android:textColor="#888888"
			android:layout_marginTop="4dip"
			android:layout_marginBottom="4dip"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"/>

	<TextView
			android:id="@+id/fragment_event_item_user_share"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/fragment_event_item_user_comment"
			android:layout_below="@id/fragment_event_item_user_content_image"
			android:drawableLeft="@drawable/ic_action_share"
			android:text="分享"
			android:textColor="#888888"
			android:gravity="center"
			android:layout_marginTop="4dip"
			android:layout_marginBottom="4dip"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"/>

	<TextView
			android:id="@+id/fragment_event_item_user_hate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/fragment_event_item_user_share"
			android:layout_below="@id/fragment_event_item_user_content_image"
			android:drawableLeft="@drawable/action_hate"
			android:text="100"
			android:layout_marginTop="4dip"
			android:layout_marginBottom="4dip"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"
			android:gravity="center"
			android:visibility="gone"
			/>
	<TextView
			android:id="@+id/fragment_event_item_user_love"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/fragment_event_item_user_hate"
			android:layout_below="@id/fragment_event_item_user_content_image"
			android:drawableLeft="@drawable/ic_action_love"
			android:text="985赞"
			android:textColor="#888888"
			android:layout_marginTop="4dip"
			android:layout_marginBottom="4dip"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"
			android:gravity="center"
			/>

</RelativeLayout>