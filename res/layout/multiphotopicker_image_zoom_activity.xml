<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<RelativeLayout
			android:id="@+id/multiphotopicker_image_zoom_relative_layout"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_alignParentTop="true"
			android:background="@color/darkgreen">

		<Button
				android:id="@+id/multiphotopicker_image_zoom_photo_exit"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@drawable/multiphotopicker_btn_confirm"/>

		<Button
				android:id="@+id/multiphotopicker_image_zoom_photo_del"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:background="@drawable/multiphotopicker_btn_delete"/>

	</RelativeLayout>

	<android.support.v4.view.ViewPager
			android:id="@+id/multiphotopicker_image_zoom_view_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/multiphotopicker_image_zoom_relative_layout">
	</android.support.v4.view.ViewPager>

</RelativeLayout>