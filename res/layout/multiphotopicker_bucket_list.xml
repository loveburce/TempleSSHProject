<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:paddingBottom="10dp">

	<ImageView
			android:id="@+id/multiphotopicker_bucket_list_cover"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:scaleType="centerCrop"/>

	<RelativeLayout
			android:id="@+id/multiphotopicker_bucket_list_info_rl"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/multiphotopicker_bucket_list_cover">
		<TextView
				android:id="@+id/multiphotopicker_bucket_list_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="相册名称"
				android:textColor="@color/black"
				android:textSize="15sp"/>

		<TextView
				android:id="@+id/multiphotopicker_bucket_list_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@id/multiphotopicker_bucket_list_title"
				android:layout_below="@id/multiphotopicker_bucket_list_title"
				android:text="0张"
				android:textColor="@color/lightgray"
				android:textSize="14sp"/>
	</RelativeLayout>
</RelativeLayout>